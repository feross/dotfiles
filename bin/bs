#!/bin/zsh
set -Eeuo pipefail

if [ -n "$1" ]
then
  npx browserify -r "$1" | npx babel-minify | gzip | wc -c
else
  echo "bs - get the browserify size (minified+gzipped) of a local module"
  echo ""
  echo "Usage:"
  echo "    bs <module-path>"
  echo ""
  echo "Examples:"
  echo "    bs buffer"
  echo "    bs ./lib/file.js"
fi
